{
    "core":
        {
            /* base_interval is in seconds */
            "interval": 1,
            /* keep these values present with empty strings if they are not
               applicable - deliverable payload expects them to be present,
               even if not populated */
            "datacenter": "",
            "region": "",
            "zone": "",
            "cluster": "foobar",
            "hostname": "baz",
            "ipv4": "192.168.2.15",
            "ipv6": "",
            "log": {
                "dest": "file",
                "fileName": "badger.log",
                "level": "debug"
            }
        },
    "modules":
        {
            "dir": "badger_modules",
            "config": "badger_modules/conf.d",
            "included_modules": ["load", "system", "cpu", "disk", "network"]
        },
    "emitters":
        {
            "dir": "badger_emitters",
            "config": "badger_emitters/conf.d",
            "workers": 3,
            "included_emitters": ["graphite_emitter", "influxdb_emitter"]
        }
}
